@model ProvaProjeto2.Models.Ferramenta

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Ferramenta</h1>

<h4>Ferramenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFerramenta" class="control-label">Nome da Ferramenta</label>
                <input asp-for="NomeFerramenta" class="form-control" />
                <span asp-validation-for="NomeFerramenta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao Gerenciamento de Ferramentas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
